# Backend Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Required
# =============================================================================

# PostgreSQL database connection string
DATABASE_URL=postgresql://user:password@localhost:5432/client_onboarding

# =============================================================================
# Optional - External APIs
# =============================================================================

# PageOptimizer Pro API - Content optimization scoring
# Get your API key from: https://pageoptimizer.pro
POP_API_KEY=
# Feature flags (set to true to enable POP integration)
USE_POP_CONTENT_BRIEF=false
USE_POP_SCORING=false
# Shadow mode - run both POP and legacy scoring for comparison analysis
POP_SHADOW_MODE=false

# DataForSEO API - SERP and keyword data
DATAFORSEO_API_LOGIN=
DATAFORSEO_API_PASSWORD=

# Anthropic API - Claude LLM for categorization
ANTHROPIC_API_KEY=

# Perplexity API - Website analysis
PERPLEXITY_API_KEY=

# Keywords Everywhere API - Keyword data
KEYWORDS_EVERYWHERE_API_KEY=

# Google Cloud NLP API - Entity extraction
GOOGLE_NLP_API_KEY=
GOOGLE_NLP_PROJECT_ID=

# Crawl4AI API - Web crawling
CRAWL4AI_API_URL=
CRAWL4AI_API_TOKEN=

# =============================================================================
# Optional - S3/Object Storage
# =============================================================================

# S3 bucket name for file uploads (brand assets, documents)
S3_BUCKET=onboarding-files

# S3 endpoint URL - for local development with LocalStack use:
# http://localhost:4566
# Leave empty for production AWS S3
S3_ENDPOINT_URL=http://localhost:4566

# S3 credentials - for LocalStack, use any non-empty values (e.g., "test")
# For production AWS, use real IAM credentials
S3_ACCESS_KEY=test
S3_SECRET_KEY=test

# S3 region (default: us-east-1)
S3_REGION=us-east-1

# =============================================================================
# Optional - Redis (for caching/queues)
# =============================================================================

REDIS_URL=

# =============================================================================
# Optional - Email/SMTP
# =============================================================================

SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# =============================================================================
# Optional - Application Settings
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (enables detailed error messages)
DEBUG=false

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Frontend URL for CORS (production only)
FRONTEND_URL=
